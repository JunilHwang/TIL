@import url('https://fonts.googleapis.com/css?family=Noto+Serif+KR&display=swap');

body
  font-family 'Noto Serif KR', serif, Nanum Gothic, Malgun Gothic, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue';

.container
  width 1200px
  margin 0 auto

.navbar
  height auto !important
  .container
    position relative

.home-link
  vertical-align middle
  display inline-block
  text-decoration none
  color #000
  line-height 130%
  text-align center
  figure
    display inline-block
    vertical-align middle
    width 50px
    height 50px
    border-radius 50px
    overflow hidden
    margin 0
    img
      width 100%
      height 100%
      object-fit cover
  div
    display inline-block
    vertical-align middle
    strong
      display block
      font-size 17px   
    em
      display block
      font-size 13px
      font-style normal
      color #666

.siteFooter
  background #242729
  padding 20px 0
  font-size 13px
  color #848d95
  p
    margin 0 
  &Copyright
    text-transform uppercase
    color #bbc0c4
  &Contact
    padding-top 10px
    a
      color inherit
      text-decoration none
      text-transform none

.theme-default-content
  &.content__default
    padding-top 50px
    max-width 800px